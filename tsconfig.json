{
	"compilerOptions": {
		"lib": ["DOM", "esnext"],
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"strict": true,
		"esModuleInterop": true,
		"outDir": "dist",
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules/*", "dist/*"]
}